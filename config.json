{
    "metrics": [
      {
        "name": "cpu",
        "range": {"min": 0, "max": 100},
        "thresholds": [
          {"min": 0, "max": 50, "type": "Status", "message": "CPU utilization is normal"},
          {"min": 51, "max": 75, "type": "Warning", "message": "CPU utilization is elevated"},
          {"min": 76, "max": 100, "type": "Error", "message": "CPU utilization is critical"}
        ]
      },
      {
        "name": "memory",
        "range": {"min": 0, "max": 64},
        "thresholds": [
          {"min": 0, "max": 25, "type": "Status", "message": "Memory usage is normal"},
          {"min": 26, "max": 50, "type": "Warning", "message": "Memory usage is elevated"},
          {"min": 51, "max": 64, "type": "Error", "message": "Memory usage is critical"}
        ]
      },
      {
        "name": "disk io",
        "range": {"min": 0, "max": 1000},
        "thresholds": [
          {"min": 0, "max": 300, "type": "Status", "message": "Disk I/O is normal"},
          {"min": 301, "max": 700, "type": "Warning", "message": "Disk I/O is elevated"},
          {"min": 701, "max": 1000, "type": "Error", "message": "Disk I/O is critical"}
        ]
      }
    ],
    "hosts": [
      {"hostname": "OBSRV-SRV-P01", "ip_address": "192.168.1.10"},
      {"hostname": "OBSRV-SRV-P02", "ip_address": "192.168.1.11"},
      {"hostname": "OBSRV-SRV-P03", "ip_address": "192.168.1.12"}
    ],
    "httpEndpoint": "https://############.collect.observeinc.com/v1/http",
    "token": "YOUR TOKEN",
    "sleepTime": 1
  }
  
